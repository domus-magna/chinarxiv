# Example environment configuration for chinaxiv-english
# Copy to .env and replace placeholder values. Do not commit real secrets.

# OpenRouter (required for translation and formatting)
OPENROUTER_API_KEY=sk-or-REPLACE_ME

# Optional: Discord notifications for alerts
DISCORD_WEBHOOK_URL=

# BrightData (optional; enables ChinaXiv harvesting via Web Unlocker)
BRIGHTDATA_API_KEY=bd-REPLACE_ME
BRIGHTDATA_ZONE=REPLACE_ME

# BrightData Web Unlocker (optional; dedicate zone credentials for Unlocker API)
BRIGHTDATA_UNLOCKER_ZONE=REPLACE_ME
BRIGHTDATA_UNLOCKER_PASSWORD=REPLACE_ME

# BrightData ISP Proxy (optional; improves PDF download success rates via CN ISP proxy)
# Format: http://brd-customer-YOUR_CUSTOMER_ID-zone-YOUR_ZONE:YOUR_PASSWORD@brd.superproxy.io:PORT
HTTP_PROXY=http://brd-customer-YOUR_CUSTOMER_ID-zone-YOUR_ZONE:YOUR_PASSWORD@brd.superproxy.io:33335
HTTPS_PROXY=http://brd-customer-YOUR_CUSTOMER_ID-zone-YOUR_ZONE:YOUR_PASSWORD@brd.superproxy.io:33335
# NO_PROXY: Bypass proxy for these domains (keeps OpenRouter translation direct, allows CLI tools like Claude Code and Gemini CLI to connect)
NO_PROXY=openrouter.ai,api.openrouter.ai,anthropic.com,api.anthropic.com,googleapis.com,generativelanguage.googleapis.com
# BrightData headless browser websocket (Playwright/Puppeteer connect string)
# Leave unset to prefer Unlocker; set only if you need headless browser fetches
BRIGHTDATA_BROWSER_WSS=

# Vercel Authentication (optional; for stx-labs or Vercel deployments)
# Used for password-protected deployments with Edge middleware
AUTH_PASSWORD_SALT=REPLACE_ME
AUTH_PASSWORD_HASH=REPLACE_ME
AUTH_SESSION_SECRET=REPLACE_ME

# Monitoring dashboard (optional; used by src/monitor.py)
MONITORING_USERNAME=admin
MONITORING_PASSWORD=chinaxiv2024

# Error budget alerts (optional; defaults are conservative if unset)
ENABLE_ERROR_BUDGET_ALERTS=false
